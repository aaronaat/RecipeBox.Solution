<h1>Recipe City</h1>
<hr />
<h2>Ingredients:</h2>

@if (Model.Count != 0)
{
    <ul>
    @foreach (var ingredient in Model)
    {
        <li><a href='/ingredients/@ingredient.GetId()'>@ingredient.GetName()</a></li>
    }
    </ul>
}

<h4><a href="/ingredients/new">Add new ingredient</a></h4>
<h4><a href="/">Return home</a></h4>