<h1>Recipe List:</h1>

@if (@Model.Count == 0)
{
  <h3>No recipes have been added yet!</h3>
}

@if (@Model.Count != 0)
{
  @foreach (var recipe in Model)
  {
    <h3><a href='/recipes/@recipe.GetId()'>@recipe.GetRecipeName()</a></h3>
  }
}

<h3><a href='/recipe/new'>Add a new recipe</a></h3>
<p><a href='/'>Back home</a></p>