<h1>Category List:</h1>

@if (@Model.Count == 0)
{
  <h3>No categories have been added yet!</h3>
}

@if (@Model.Count != 0)
{
  @foreach (var category in Model)
  {
    <h3><a href='/categories/@category.GetId()'>@category.GetType()</a></h3>
  }
}

<h3><a href='/categories/new'>Add a new category</a></h3>
<p><a href='/'>Back home</a></p>